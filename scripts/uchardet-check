#!/bin/sh

if [[ -v SKIP ]]; then
    printf "Skipping uchardet check\n"
    exit 0
fi

if [ ! -d "$BUILD/repos/uchardet" ]; then
    git clone https://gitlab.freedesktop.org/uchardet/uchardet "$BUILD/repos/uchardet"
fi

cd "$BUILD/repos/uchardet"

if [[ -n "$TAG" ]]; then
    git fetch --tags --force --all
    current_tag="$(git describe --exact-match --tags 2>/dev/null || true)"

    if [[ "$current_tag" != "$TAG" ]]; then
        printf "Switching to tag $TAG\n"

        #determine if we're on an undetached branch. if we are, then we need to pull
        if ! (git checkout $TAG 2>&1 | grep -qE '(HEAD is now at|Your branch is up to date)'); then
            git -C "$BUILD/repos/uchardet" pull 2>&1
        fi

        REBUILD="uchardet"
    fi
fi

if [[ "$CLEAN_BUILD" == "yes" ]] || [[ "$REBUILD" == "uchardet" ]] || ! ( git pull 2>&1 | grep -qE '(Already up to date|You are not currently on a branch)' ); then
    "$BUILD/scripts/uchardet-build"
else
    printf "Nothing to update for uchardet\n"
fi